@model TechSolutions.Web.Models.Customer

@{
    ViewData["Title"] = "Delete Customer";
}

<div class="container mt-4">

    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">

            <div class="card border-danger shadow-sm">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">Confirm Delete</h4>
                </div>

                <div class="card-body">
                    <p class="text-danger fw-semibold">
                        Are you sure you want to delete this customer?
                    </p>

                    <p class="text-muted">
                        This action will deactivate the customer. No data will be permanently removed.
                    </p>

                    <dl class="row mb-4">
                        <dt class="col-sm-4">First Name</dt>
                        <dd class="col-sm-8">@Model.FirstName</dd>

                        <dt class="col-sm-4">Surname</dt>
                        <dd class="col-sm-8">@Model.SurName</dd>

                        <dt class="col-sm-4">Email</dt>
                        <dd class="col-sm-8">@Model.Email</dd>

                        <dt class="col-sm-4">Phone</dt>
                        <dd class="col-sm-8">@Model.Phone</dd>
                    </dl>

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="ID" />

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                Cancel
                            </a>

                            <button type="submit" class="btn btn-danger">
                                Delete Customer
                            </button>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>

</div>
